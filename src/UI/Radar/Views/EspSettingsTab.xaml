<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.EspSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoneEftDmaRadar.UI.Radar.Views"
             xmlns:conv="clr-namespace:LoneEftDmaRadar.UI.Misc"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             Padding="10">

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:SettingsViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <conv:StringToColorConverter x:Key="StringToColorConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"
                    Margin="0,0,0,10">

            <!-- General Settings -->
            <GroupBox Header="ESP 融合 - 通用设置"
                      Margin="0,0,0,12">
                <StackPanel>
                    <WrapPanel>
                        <Button Content="启动融合" 
                                Command="{Binding StartEspCommand}"
                                Width="120"
                                Height="32"
                                Margin="0,0,16,8"
                                ToolTip="在全屏模式下打开 ESP 窗口。"/>
                    </WrapPanel>

                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="目标显示屏：" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                        <ComboBox Width="300"
                                  ItemsSource="{Binding AvailableScreens}"
                                  SelectedValue="{Binding EspTargetScreen, Mode=TwoWay}"
                                  SelectedValuePath="Index"
                                  DisplayMemberPath="DisplayName"
                                  ToolTip="开始融合时选择要在其上显示 ESP 窗口的显示器。"/>
                    </WrapPanel>

                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="分辨率覆盖 (0 = 自动)： " VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Width="65" Text="{Binding EspScreenWidth, Mode=TwoWay}" Margin="0,0,8,0" ToolTip="宽度（例如 1920、2560）。设置为 0 以自动检测所选显示器分辨率。"/>
                        <TextBlock Text="x" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Width="65" Text="{Binding EspScreenHeight, Mode=TwoWay}" Margin="0,0,16,0" ToolTip="高度（例如 1080、1440）。设置为 0 以自动检测所选显示器分辨率。"/>
                    </WrapPanel>

                    <GroupBox Header="文字样式" Margin="0,8,0,0">
                        <StackPanel>
                            <WrapPanel Margin="0,4,0,0">
                                <TextBlock Text="字体：" VerticalAlignment="Center" Width="90"/>
                                <TextBox Width="180"
                                         Text="{Binding EspFontFamily, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="使用任何安装的字体名称（例如 Segoe UI、Arial、Consolas）"/>
                            </WrapPanel>
                            <WrapPanel Margin="0,4,0,0">
                                <TextBlock Text="字号 (S/M/L)：" VerticalAlignment="Center" Width="90"/>
                                <TextBox Width="50"
                                         Text="{Binding EspFontSizeSmall, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="小字号（掉落标签）"/>
                                <TextBlock Text="/" VerticalAlignment="Center" Margin="6,0"/>
                                <TextBox Width="50"
                                         Text="{Binding EspFontSizeMedium, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="中字号（名字、撤离点）"/>
                                <TextBlock Text="/" VerticalAlignment="Center" Margin="6,0"/>
                                <TextBox Width="50"
                                         Text="{Binding EspFontSizeLarge, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="大字号（状态文本）"/>
                            </WrapPanel>
                            <TextBlock Text="更改会即时应用到 ESP 覆盖层"
                                       Foreground="Gray"
                                       FontSize="10"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="玩家 ESP" Margin="0,0,0,12">
                <StackPanel>
                    <WrapPanel>
                        <CheckBox Content="方框" IsChecked="{Binding EspPlayerBoxes, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="骨架" IsChecked="{Binding EspPlayerSkeletons, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="名字" IsChecked="{Binding EspPlayerNames, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="队伍 ID" IsChecked="{Binding EspGroupIds, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="队伍颜色" IsChecked="{Binding EspGroupColors, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="阵营文字" IsChecked="{Binding EspPlayerFaction, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="阵营颜色" IsChecked="{Binding EspFactionColors, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="血量状态" IsChecked="{Binding EspPlayerHealth, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="距离" IsChecked="{Binding EspPlayerDistance, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="头部圆圈" IsChecked="{Binding EspHeadCirclePlayers, Mode=TwoWay}" Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="最大距离 (0 = 无限)：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="PlayerDistanceSlider"
                                Width="300"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="1000"
                                SmallChange="10"
                                LargeChange="100"
                                Value="{Binding EspPlayerMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=PlayerDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                    </WrapPanel>
                    <WrapPanel Margin="0,8,0,0">
                        <TextBlock Text="标签位置（玩家）：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Width="140"
                                  ItemsSource="{Binding LabelPositions}"
                                  SelectedItem="{Binding EspLabelPosition, Mode=TwoWay}"
                                  ToolTip="选择玩家标签相对于包围盒的绘制位置。"/>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorPlayers, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,4,0,0" VerticalAlignment="Center">
                            <TextBlock Text="BEAR 阵营：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorFactionBear, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                            <TextBlock Text="USEC：" VerticalAlignment="Center" Margin="10,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorFactionUsec, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="AI ESP" Margin="0,0,0,12">
                <StackPanel>
                    <WrapPanel>
                        <CheckBox Content="方框" IsChecked="{Binding EspAIBoxes, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="骨架" IsChecked="{Binding EspAISkeletons, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="名字" IsChecked="{Binding EspAINames, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="血量状态" IsChecked="{Binding EspAIHealth, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="距离" IsChecked="{Binding EspAIDistance, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="头部圆圈" IsChecked="{Binding EspHeadCircleAI, Mode=TwoWay}" Margin="0,0,16,8" />
                     </WrapPanel>
                    <WrapPanel Margin="0,8,0,0">
                        <TextBlock Text="标签位置（AI/Scav）：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Width="140"
                                  ItemsSource="{Binding LabelPositions}"
                                  SelectedItem="{Binding EspLabelPositionAI, Mode=TwoWay}"
                                  ToolTip="选择 AI/scav 标签相对于包围盒的绘制位置。"/>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="AI/Scav 颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorAI, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="玩家 Scav 颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorPlayerScavs, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="掠夺者 颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorRaiders, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Boss 颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorBosses, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="最大距离 (0 = 无限)：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="AIDistanceSlider"
                                Width="300"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="1000"
                                SmallChange="10"
                                LargeChange="100"
                                Value="{Binding EspAIMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=AIDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                     </WrapPanel>
                    <TextBlock Text="头部圆圈会继承实体颜色（玩家、Scav、掠夺者、Boss）。"
                               Foreground="Gray"
                               FontSize="10"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="掉落、撤离点与爆炸物" Margin="0,0,0,12">
                <StackPanel>
                     <WrapPanel>
                        <CheckBox Content="显示掉落" IsChecked="{Binding EspLoot, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="显示价格" IsChecked="{Binding EspLootPrice, Mode=TwoWay}" Margin="0,0,16,8" IsEnabled="{Binding EspLoot}" />
                        <CheckBox Content="显示撤离点" IsChecked="{Binding EspExfils, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="显示绊线" IsChecked="{Binding EspTripwires, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="显示手榴弹" IsChecked="{Binding EspGrenades, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="掉落锥过滤器"
                                  IsChecked="{Binding EspLootConeEnabled, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <CheckBox Content="显示食物" IsChecked="{Binding EspFood, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="显示药品" IsChecked="{Binding EspMeds, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="显示背包" IsChecked="{Binding EspBackpacks, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="显示任务物品" IsChecked="{Binding EspQuestLoot, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="显示尸体" IsChecked="{Binding EspCorpses, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="显示容器" IsChecked="{Binding EspContainers, Mode=TwoWay}" Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspContainers}">
                        <TextBlock Text="容器距离 (ESP)"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="EspContainerDistanceSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="0"
                                Maximum="200"
                                SmallChange="1"
                                LargeChange="10"
                                Value="{Binding EspContainerDistance, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=EspContainerDistanceSlider, StringFormat='{}{0:F0}'}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspLootConeEnabled}">
                        <TextBlock Text="锥形角度"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="LootConeSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="5"
                                Maximum="60"
                                SmallChange="1"
                                LargeChange="5"
                                Value="{Binding EspLootConeAngle, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=LootConeSlider, StringFormat=F0}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                     </WrapPanel>
                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="最大距离 (0 = 无限)：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="LootDistanceSlider"
                                Width="200"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="500"
                                SmallChange="10"
                                LargeChange="50"
                                Value="{Binding EspLootMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=LootDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="掉落颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorLoot, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="容器颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorContainers, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="撤离点颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorExfil, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="绊线颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorTripwire, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="手榴弹颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorGrenade, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- Mini Radar Settings -->
            <GroupBox Header="迷你雷达" Margin="0,0,0,12">
                <StackPanel>
                    <CheckBox Content="启用迷你雷达" IsChecked="{Binding MiniRadarEnabled, Mode=TwoWay}" Margin="0,0,0,8"/>
                    
                    <WrapPanel Margin="0,0,0,8" IsEnabled="{Binding MiniRadarEnabled}">
                         <TextBlock Text="大小：" VerticalAlignment="Center" Width="60"/>
                         <Slider Width="150" Minimum="150" Maximum="512" Value="{Binding MiniRadarSize, Mode=TwoWay}" SmallChange="10" LargeChange="50"/>
                         <TextBlock Text="{Binding MiniRadarSize, StringFormat='{}{0} px'}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </WrapPanel>

                    <WrapPanel Margin="0,0,0,8" IsEnabled="{Binding MiniRadarEnabled}">
                        <TextBlock Text="位置：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="X" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBox Width="50" Text="{Binding MiniRadarScreenX, Mode=TwoWay}" ToolTip="-1 = 自动（右）"/>
                        <TextBlock Text="Y" VerticalAlignment="Center" Margin="8,0,4,0"/>
                        <TextBox Width="50" Text="{Binding MiniRadarScreenY, Mode=TwoWay}"/>
                        <TextBlock Text="(-1 X = 自动 右上)" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="Gray" FontSize="10"/>
                    </WrapPanel>

                    <TextBlock Text="可见图层" FontWeight="SemiBold" Margin="0,4,0,4" IsEnabled="{Binding MiniRadarEnabled}"/>
                    <WrapPanel IsEnabled="{Binding MiniRadarEnabled}">
                         <CheckBox Content="玩家" IsChecked="{Binding MiniRadarShowPlayers, Mode=TwoWay}" Margin="0,0,12,0"/>
                         <CheckBox Content="掉落" IsChecked="{Binding MiniRadarShowLoot, Mode=TwoWay}" Margin="0,0,12,0"/>
                         <CheckBox Content="容器" IsChecked="{Binding MiniRadarShowContainers, Mode=TwoWay}" Margin="0,0,12,0"/>
                         <CheckBox Content="出口" IsChecked="{Binding MiniRadarShowExits, Mode=TwoWay}" Margin="0,0,12,0"/>
                         <CheckBox Content="手榴弹" IsChecked="{Binding MiniRadarShowGrenades, Mode=TwoWay}" Margin="0,0,12,0"/>
                    </WrapPanel>
                    <CheckBox Content="反转地图颜色（暗色）" IsChecked="{Binding MiniRadarInvertColors, Mode=TwoWay}" IsEnabled="{Binding MiniRadarEnabled}" Margin="0,8,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Performance Settings -->
            <GroupBox Header="杂项"
                      Margin="0,0,0,12">
                <StackPanel>
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="ESP 最大 FPS (0 = 无限 / 默认 144)："
                                   VerticalAlignment="Center" />
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Slider x:Name="EspFpsSlider"
                                    Width="220"
                                    Minimum="0"
                                    Maximum="360"
                                    SmallChange="10"
                                    LargeChange="30"
                                    TickFrequency="30"
                                    IsSnapToTickEnabled="True"
                                   Value="{Binding EspMaxFPS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="{Binding Value, ElementName=EspFpsSlider, StringFormat='{}{0:F0}'}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                        <TextBlock Text="0 = 无限（默认为 144）。较低值可节省 CPU/GPU。"
                                   Foreground="Gray"
                                   FontSize="10"
                                   Margin="0,2,0,0" />
                    </StackPanel>


                    <CheckBox Content="准星"
                                  ToolTip="在 ESP 窗口中心显示一个简单的准星。"
                                  IsChecked="{Binding EspCrosshair, Mode=TwoWay}"
                                  Margin="0,0,16,8" />

                    <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspCrosshair}">
                        <TextBlock Text="准星长度" VerticalAlignment="Center"/>
                        <Slider x:Name="CrosshairLengthSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="5"
                                Maximum="100"
                                SmallChange="1"
                                LargeChange="5"
                                Value="{Binding EspCrosshairLength, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=CrosshairLengthSlider, StringFormat=F0}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </WrapPanel>

                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="准星颜色：" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <xctk:ColorPicker Width="42" Height="26"
                                              SelectedColor="{Binding EspColorCrosshair, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              UsingAlphaChannel="True"
                                              ShowRecentColors="False"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
