<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.MemWritesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Padding="10">
    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:MemWritesViewModel}" IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#11151F" />
        <SolidColorBrush x:Key="CardBorderBrush" Color="#1F2532" />
        <SolidColorBrush x:Key="AccentBrush" Color="#5DA8FF" />
        <SolidColorBrush x:Key="WarningBrush" Color="#F3B04D" />
        <SolidColorBrush x:Key="DangerBrush" Color="#EF596F" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E6EDF3" />
        <SolidColorBrush x:Key="MutedBrush" Color="#9BA7B6" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">

            <!-- Critical Warning -->
            <Border Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource DangerBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12"
                    Margin="0,0,0,12">
                <DockPanel>
                    <Border Background="{StaticResource DangerBrush}"
                            Width="4"
                            CornerRadius="4"
                            DockPanel.Dock="Left" />
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="内存写入 风险极高"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="{StaticResource ForegroundBrush}" />
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,6,0,0">这些功能直接修改游戏内存，容易被检测。被封禁的风险很高。</TextBlock>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,6,0,0">仅在您接受风险并理解这不会模仿正常玩家行为时继续使用。</TextBlock>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Master Enable -->
            <GroupBox Header="主控开关" Margin="0,0,0,12">
                <Border Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="12">
                    <StackPanel>
                        <CheckBox Content="启用 内存写入"
                                  IsChecked="{Binding Enabled, Mode=TwoWay}"
                                  FontWeight="SemiBold"
                                  FontSize="14"
                                  Foreground="{StaticResource ForegroundBrush}"
                                  Margin="0,0,0,10" />

                        <TextBlock Text="此主开关必须打开，下面的任何内存写入功能才会运行。"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource MutedBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="关闭它会禁用下面的所有选项。"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource MutedBrush}"
                                   FontSize="12" />
                    </StackPanel>
                </Border>
            </GroupBox>

            <UniformGrid Columns="2" Rows="0" Margin="0,0,0,12">

                <!-- Silent Aim -->
                <GroupBox Header="静默瞄准" Margin="0,0,12,12">
                    <Border Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12">
                        <StackPanel IsEnabled="{Binding Enabled}">
                            <CheckBox Content="启用 静默瞄准"
                                      IsChecked="{Binding MemoryAimEnabled, Mode=TwoWay}"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      Margin="0,0,0,10" />

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="目标 骨骼："
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           Margin="0,0,8,0" />
                                <ComboBox ItemsSource="{Binding AvailableBones}"
                                          SelectedItem="{Binding MemoryAimTargetBone, Mode=TwoWay}"
                                          Width="200" />
                            </StackPanel>

                            <TextBlock Text="在内存中写入射击方向而不是移动鼠标。"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,6" />

                            <TextBlock Text="与设备自瞄共享相同的瞄准按键，不需要设备自瞄设备。"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource ForegroundBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,10" />

                            <Border Background="#151C29"
                                    BorderBrush="{StaticResource CardBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,6,0,0">
                                <StackPanel>
                                    <TextBlock Text="工作原理"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBrush}" />
                                    <TextBlock TextWrapping="Wrap"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="12"
                                               Margin="0,4,0,0">- 按住瞄准键计算到当前目标的方向。 - 计算向量直接写入内存。 - 子弹沿该向量飞行，且不会有任何鼠标移动。 - 所有设备自瞄设置（FOV、预测、过滤器）仍然适用。</TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="#1A1618"
                                    BorderBrush="{StaticResource DangerBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,10,0,0">
                                <StackPanel>
                                    <TextBlock Text="检测风险：极高"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DangerBrush}" />
                                    <TextBlock Text="静默瞄准行为对反作弊系统极易被察觉。"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="12"
                                               Margin="0,4,0,0" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </GroupBox>

                <!-- No Recoil -->
                <GroupBox Header="无后座" Margin="0,0,12,12">
                    <Border Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12">
                        <StackPanel IsEnabled="{Binding Enabled}">
                            <CheckBox Content="启用 无后座"
                                      IsChecked="{Binding NoRecoilEnabled, Mode=TwoWay}"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      Margin="0,0,0,10" />

                            <TextBlock Text="调整写入内存中的后座和摇摆。100% 移除后座；0% 保持原始效果。"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,10" />

                            <!-- Recoil Amount -->
                            <StackPanel Margin="0,6,0,0" IsEnabled="{Binding NoRecoilEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="后座 减少" Foreground="{StaticResource ForegroundBrush}" />
                                    <TextBlock Text="{Binding NoRecoilAmount, StringFormat='{}{0:F0}%'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBrush}"
                                               Grid.Column="1"
                                               HorizontalAlignment="Right" />
                                </Grid>
                                <Slider Value="{Binding NoRecoilAmount, Mode=TwoWay}"
                                        Minimum="0"
                                        Maximum="100"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True"
                                        Margin="0,6,0,0" />
                            </StackPanel>

                            <!-- Sway Amount -->
                            <StackPanel Margin="0,12,0,0" IsEnabled="{Binding NoRecoilEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="摇摆 减少" Foreground="{StaticResource ForegroundBrush}" />
                                    <TextBlock Text="{Binding NoSwayAmount, StringFormat='{}{0:F0}%'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBrush}"
                                               Grid.Column="1"
                                               HorizontalAlignment="Right" />
                                </Grid>
                                <Slider Value="{Binding NoSwayAmount, Mode=TwoWay}"
                                        Minimum="0"
                                        Maximum="100"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True"
                                        Margin="0,6,0,0" />
                            </StackPanel>

                            <Border Background="#1A1618"
                                    BorderBrush="{StaticResource WarningBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="检测风险：高"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource WarningBrush}" />
                                    <TextBlock Text="直接更改内存中的武器行为，很容易被标记。"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="12"
                                               Margin="0,4,0,0" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </GroupBox>

                <!-- Infinite Stamina -->
                <GroupBox Header="无限体力" Margin="0,0,12,12">
                    <Border Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12">
                        <StackPanel IsEnabled="{Binding Enabled}">
                            <CheckBox Content="启用 无限体力"
                                      IsChecked="{Binding InfiniteStaminaEnabled, Mode=TwoWay}"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      Margin="0,0,0,10" />

                            <TextBlock Text="当体力和氧气降到大约三分之一以下时补满。"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,6" />

                            <TextBlock Text="还尝试绕过疲劳状态以避免移动惩罚。"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,10" />

                            <Border Background="#1A1618"
                                    BorderBrush="{StaticResource WarningBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,6,0,0">
                                <StackPanel>
                                    <TextBlock Text="检测风险：中等"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource WarningBrush}" />
                                    <TextBlock Text="玩家属性更改不如移除后座明显，但仍可能被检测。"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="12"
                                               Margin="0,4,0,0" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </GroupBox>

            </UniformGrid>

        </StackPanel>
    </ScrollViewer>
</UserControl>
