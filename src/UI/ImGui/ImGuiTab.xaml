<UserControl x:Class="LoneEftDmaRadar.UI.ImGui.ImGuiTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:imgui="clr-namespace:LoneEftDmaRadar.UI.ImGui"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="#1a1a1a">
        <!-- ImGui rendering host -->
        <imgui:ImGuiHostControl x:Name="ImGuiHost" />

        <!-- Loading message when ImGui is not yet initialized -->
        <TextBlock x:Name="LoadingText"
                   Text="Initializing ImGui..."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#888888"
                   FontSize="16"
                   Visibility="Visible" />

        <!-- Fallback message if initialization fails -->
        <TextBlock x:Name="ErrorText"
                   Text="ImGui failed to initialize. Check logs for details."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#ff6666"
                   FontSize="14"
                   Visibility="Collapsed" />
    </Grid>

</UserControl>
