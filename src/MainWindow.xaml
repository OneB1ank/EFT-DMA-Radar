<Window x:Class="LoneEftDmaRadar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoneEftDmaRadar"
        xmlns:vm="clr-namespace:LoneEftDmaRadar"
        xmlns:tabs="clr-namespace:LoneEftDmaRadar.UI.Radar.Views"
        mc:Ignorable="d"
        Title="Moulman EFT DMA Radar"
        Width="1280" Height="720"
        Icon="/lone-icon.ico">
    <d:Window.DataContext>
        <d:DesignInstance Type="{x:Type vm:MainWindowViewModel}"
                      IsDesignTimeCreatable="False"/>
    </d:Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="1213*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2">
            <TabItem Header="Radar"
                     x:Name="RadarTab" Margin="0,-1,0,1">
                <tabs:RadarTab x:Name="Radar" />
            </TabItem>

            <TabItem Header="Settings" Margin="0,-1,0,1">
                <TabControl Margin="4">
                    <TabItem Header="Radar" Margin="0,-1,16,1">
                        <tabs:SettingsTab x:Name="Settings" />
                    </TabItem>
                    <TabItem Header="ESP Fuser" Height="34" Margin="0,-1,16,0" VerticalAlignment="Top">
                        <tabs:EspSettingsTab x:Name="EspSettings" />
                    </TabItem>
                    <TabItem Header="Loot Filters" Height="34" Margin="0,-1,16,0" VerticalAlignment="Top">
                        <tabs:LootFiltersTab x:Name="LootFilters"/>
                    </TabItem>
                    <TabItem Header="Makcu Aimbot" Height="34" Margin="0,-1,16,0" VerticalAlignment="Top">
                        <tabs:MakcuTab x:Name="Makcu" />
                    </TabItem>
                    <TabItem Header="MemWrites" Width="117" Height="34" Margin="0,-1,0,0" VerticalAlignment="Top">
                        <tabs:MemWritesTab x:Name="MemWrites" />
                    </TabItem>
                </TabControl>
            </TabItem>

            <TabItem Header="Web Radar" Margin="0,-1,0,1">
                <tabs:WebRadarTab x:Name="WebRadar" />
            </TabItem>
            <TabItem Header="Player History" Margin="0,-1,0,1">
                <tabs:PlayerHistoryTab x:Name="PlayerHistory"/>
            </TabItem>
            <TabItem Header="Player Watchlist" Margin="0,-1,0,1">
                <tabs:PlayerWatchlistTab x:Name="PlayerWatchlist"/>
            </TabItem>
            <TabItem Header="Debug" Margin="0,-1,0,1">
                <tabs:DebugTab x:Name="DebugTab" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
